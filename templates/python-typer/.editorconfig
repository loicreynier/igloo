root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

[*.nix]
max_line_length = off

[*.md]
indent_size = unset
trim_trailing_whitespace = false
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 88

[*.lock]
# Those files should not be opened by editors nor parsed by pre-commit hooks
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = off
