root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

[*.{nix,xml,bbcode,txt}]
max_line_length = off

[*.md]
indent_size = unset
trim_trailing_whitespace = false
max_line_length = off

[Justfile]
indent_size = 4

[{*.lock,plugins/**/*.yaml}]
indent_size = unset
indent_style = unset
max_line_length = off
