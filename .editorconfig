root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

[*.nix]
max_line_length = off

[*.txt]
max_line_length = off

[*.md]
indent_size = unset
trim_trailing_whitespace = false
max_line_length = 100

[*.ps1]
indent_size = 4
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 88

[*.lua]
indent_size = 2
max_line_length = 120

[{*.bash,*.sh,.bashrc,bin/rnm}]
max_line_length = 100
simplify = true

[*.{yaml,json}]
max_line_length = unset

[{*.conf,config.xxhc}]
max_line_length = unset

[Justfile]
indent_size = 4
max_line_length = 100

[config/git/config]
indent_style = tab
max_line_length = unset

[config/glazewm/config.yaml]
end_of_line = unset

[*.{lock,age}]
# Those files should not be opened by editors nor parsed by pre-commit hooks
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = off
