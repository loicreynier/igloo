root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

[*.{bash,sh}]
max_line_length = 120
simplify = true

[.bashrc]
max_line_length = 120
simplify = true

[.profile]
max_line_length = 120
simplify = true

[config/git/config]
indent_style = tab

[*.py]
# Handled by other linter, also EditorConfig doesn't understand docstrings
indent_size = off
max_line_length = off

[*.lock]
# Should not be opened nor linted
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = off
